{
  "extends": "../../../packages/shared/typescript-config/base.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "boundaries/*": ["src/boundaries/*"],
      "acmp-connector-bounded-context/*": ["src/bounded-contexts/acmp-connector-bounded-context/*"],
      "acmp-connector-bounded-context": ["src/bounded-contexts/acmp-connector-bounded-context"]
    }
  },
  "include": [
    "src/**/*"
, "../../shared/common-kit/src/global", "tsup.config.ts", "index.js", "tsconfig.json"  ],
  "exclude": [
    "dist",
    "node_modules",
    "tsup.config.ts"
  ]
}
